<div class="breadcrumbs">         
    <% if @current_folder #checking if we are under any folder %> 
        <%= link_to "Inicio", root_url %> 
        <% if @f %>  <!-- Pel cas de creació de carpeta -->
            <% @f.each_with_index do |folder, i| %> 
    	        <% if i != @f.length-1 %>
    	            » <%= link_to current_user.folders.find(folder).name, browse_path(folder, :f => @f) %> 
    	        <% end %>
            <% end %> 
        <% end %>
         »  <%= @current_folder.name %> 
    <% else #if we are not under any folder%> 
        Inicio 
    <% end %> 
</div>